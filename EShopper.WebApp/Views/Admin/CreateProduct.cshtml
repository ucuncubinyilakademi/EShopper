@model ProductModel
@{
    ViewData["Title"] = "CreateProduct";
}

<h1>CreateProduct</h1>
<hr />
<form asp-controller="Admin" asp-action="CreateProduct" method="post" enctype="multipart/form-data">
<div class="row">
    <div class="col-md-8">
       
            <div class="mb-3 form-group-row">
                <label class="col-md-2 col-form-label">Product Name</label>
                <div class="col-md-10">
                    <input asp-for="Name" value="@Model.Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>                  
                </div>
            </div>
            <div class="mb-3 form-group-row">
                <label asp-for="Images" class="col-md-2 col-form-label"></label>
                <div class="col-md-10">
                    <input type="file" name="files" class="form-control" multiple />
                </div>
            </div>
            <div class="mb-3 form-group-row">
                <label class="col-md-2 col-form-label">Description</label>
                <div class="col-md-10">
                    <textarea id="editor" asp-for="Description" class="form-control">@Model.Description</textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <div class="mb-3 form-group-row">
                <label class="col-md-2 col-form-label">Price</label>
                <div class="col-md-10">
                    <input asp-for="Price" value="@Model.Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group-row">

                <div class="col-md-10">
                    <input type="submit" value="Save Product" class="btn btn-primary" />
                </div>
            </div>
       
    </div>
    <div class="col-md-4">
        @foreach (var item in (List<Category>)ViewBag.Categories)
        {
            <div class="form-check">
                <input name="categoryIds"
                       value="@item.Id"
                       class="form-check-input"
                       type="checkbox"
                       id="category@(item.Id)">
                <label class="form-check-label" for="category@(item.Id)">
                    @item.Name
                </label>
            </div>
        }
    </div>
</div>
</form>